{% extends 'admin/base.html.twig' %}

{% block title %}Add Product{% endblock %}

{% block body %}

    <div class="my-4 px-8 flex justify-between items-center">
        <a href="{{path('app_product')}}" class="bg-white hover:bg-gray-200 text-gray-900 rounded-xl p-3 flex items-center shadow-lg transition duration-300 ease-in-out">Back</a>
        <div class="flex space-x-6">
            <a href="{{path('app_product_edit',{'id':product.id})}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition transform hover:scale-105 duration-300">Edit Product</a>
            <form id="delete-form-{{product.id}}" action="{{path('app_product_delete',{'id':product.id})}}" method="post">
                <button type="button" onclick="confirmDelete({{product.id}})"  class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition transform hover:scale-105 duration-300">Delete</button>

            </form>
        </div>
    </div>

    <div class="md:flex justify-center space-x-10 mt-12 px-6 lg:px-12">
        <div class="flex bg-white p-8 rounded-2xl shadow-2xl justify-center w-full md:w-1/2 mb-6 md:mb-0">
            <img src="{{asset(product.image ? 'uploads/product_images/' ~ product.image : product.image)}}" class="max-h-[400px] md:max-h-[500px] object-cover rounded-2xl shadow-xl hover:scale-105 transform transition duration-300 ease-in-out" width="300" height="300" />
            <div class="space-y-8 mt-6 md:mt-0 md:w-1/2">
                <div class="p-8 flex flex-col">
                    <h4 class="text-sm text-slate-400 font-semibold uppercase">Product Name</h4>
                    <h1 class="text-3xl font-bold text-gray-800 mb-6 pb-2 border-b-2 border-gray-300">{{product.name}}</h1>
                     <div>
                        <h4 class="text-sm text-slate-400 font-semibold uppercase">Product Description</h4>
                        <h1 class="text-xl font-medium text-gray-700 mt-2 mb-6">{{product.description}}</h1>
                    </div>
                    <!-- Product Price -->
                    <div>
                        <h4 class="text-sm text-slate-400 font-semibold uppercase">Product Price</h4>
                        <p class="text-3xl font-semibold text-green-600 mt-2">${{product.price|number_format(2)}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
