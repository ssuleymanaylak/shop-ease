{% extends 'admin/base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
    <div class="my-4 px-8 flex justify-between items-center">
        <a href="{{path('app_category')}}" class="bg-white hover:bg-gray-200 text-gray-900 rounded-xl p-3 flex items-center shadow-lg transition duration-300 ease-in-out">
            Back
        </a>
        <div class="flex space-x-6">
            <!-- Edit Button -->
            <a href="{{path('app_category_edit',{'id':category.id})}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition transform hover:scale-105 duration-300">
                Edit Category
            </a>
            <!-- Delete Button -->
            <form id="delete-form-{{category.id}}" method="POST" action="{{ path('app_category_delete', {'id': category.id}) }}">
                <button type="button" onclick="confirmDelete({{category.id}})" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition transform hover:scale-105 duration-300">
                    Delete
                </button>
            </form>
        </div>
    </div>

    <div class="md:flex space-x-10 mt-12 px-6 lg:px-12">
        <div class="flex bg-white p-8 rounded-2xl justify-center w-full md:w-1/2 mb-6 md:mb-0">
            <div class="space-y-8 mt-6 md:mt-0 md:w-1/2">
                <div class="p-8 flex flex-col">
                    <h4 class="text-sm text-slate-400 font-semibold uppercase">Category Name</h4>
                    <h1 class="text-3xl font-bold text-gray-800 mb-6 pb-2 border-b-2 border-gray-300">
                        {{ category.name }}
                    </h1>
                    <div>
                        <h4>Category Description</h4>
                        <p class="text-xl text-gray-700 font-medium mt-2 mb-6">{{ category.description }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
